<!--修改好看的版型-->

@{
    ViewBag.Title = "DCT夜市通";
}

<h2>台中市知名夜市</h2>

<table class="table">
    <tr>
        <th>編號</th>
        <th>名稱</th>
        <th>地址</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        string imgName = item.Id + ".jpg";
        <tr>
            <td>@item.Id</td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)<br />
                <img src="~/Images/@imgName" width="150" class=" img-thumbnail" /> <!--用"~"而非"..."，因為上傳雲端後會抓不到路徑所以用"~"-->
            </td>
            <td>@Html.DisplayFor(modelitem => item.Address)</td>
            <td>
                <a href="https://www.google.com.tw/maps/place/@item.Address"
                class="btn btn-info">路徑規劃</a>
            </td>
        </tr>
    }
</table>